<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wishlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back5"
    tools:context="com.example.bintu.cinefreak.WishlistActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="Movie Name:"
        />

    <TextView
        android:id="@+id/category1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="127dp"
        android:textStyle="bold"
        android:text="Category:"
        />
    <EditText
        android:id="@+id/moviename"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="122dp"
        android:hint="Enter the movie name"
        />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/category1"
        android:layout_marginTop="125dp"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="300dp"
        android:onClick="onAddToWatchlistClick"
        android:layout_centerHorizontal="true"
        android:text="Add To Wishlist"
        android:background="#edcb06"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:onClick="onGoToWatchClick"
        android:layout_centerHorizontal="true"
        android:text="Go To Wishlist"
        android:background="#edcb06"
        />


</RelativeLayout>
